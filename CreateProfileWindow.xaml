<Window x:Class="Geburtstags_Informant_WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geburtstags_Informant_WPF"
        mc:Ignorable="d"
        Title="Profil erstellen" Height="230" Width="300"
        Background="DimGray">
    
    <StackPanel Margin="10">
        <Label Content="Vorname:"/>
        <TextBox x:Name="txtBox_firstName"/>

        <Label  Content="Nachname:"/>
        <TextBox x:Name="txtBox_lastName"/>

        <Label Content="Gerburtsdatum:"/>
        <TextBox x:Name="txtBox_birthDate"/>
        <Button x:Name="button_createProfile" Click="button_createProfile_Click" Margin="10" Content="Erstellen"/>
    </StackPanel>
</Window>
